# Servidor.py
import socket

def iniciar_servidor():
    # Crear un socket
    servidor = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

    # Establecer la direcci贸n y el puerto del servidor
    direccion = ('', 12345)  # Puerto 12345

    # Asociar el socket con la direcci贸n y el puerto
    servidor.bind(direccion)

    # Escuchar conexiones entrantes
    servidor.listen(5)
    print("Servidor iniciado. Esperando conexiones...")

    while True:
        # Aceptar conexiones entrantes
        cliente, direccion_cliente = servidor.accept()
        print(f"Conexi贸n establecida con {direccion_cliente}")

        # Recibir mensaje del cliente
        mensaje = cliente.recv(1024).decode('utf-8')
        print(f"Mensaje del cliente: {mensaje}")

        # Enviar respuesta al cliente
        respuesta = "Hola, cliente!"
        cliente.send(respuesta.encode('utf-8'))

        # Cerrar la conexi贸n
        cliente.close()

if __name__ == "__main__":
    iniciar_servidor()
